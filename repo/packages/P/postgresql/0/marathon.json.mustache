{
  "id": "{{service.name}}",
  "cpus": {{postgresql.cpus}},
  "mem": {{postgresql.mem}},
  "instances": 1,
  "env": {
    "POSTGRES_PASSWORD": "{{postgresql.password}}",
    "POSTGRES_USER": "{{postgresql.user}}",
    "POSTGRES_PGDATA": "{{postgresql.pgdata}}",
    "POSTGRES_DB": "{{postgresql.dbname}}",
    "POSTGRES_INITDB_ARGS": "{{postgresql.initdbargs}}"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{resource.assets.container.docker.postgresql-docker}}",
      "forcePullImage": false,
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 5432,
          "hostPort": 0,
          "servicePort": {{postgresql.port_external}},
          "protocol": "tcp",
          "name": "{{service.name}}",
          "labels": {
            "VIP_0": "/{{service.name}}:{{postgresql.port}}"
          }
        }
      ]
    }
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "ps -Aef | grep postgres"
      },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "volumes": [
    {
      "containerPath": "/var/lib/postgresql/data",
      "hostPath": "{{postgresql.host_volume}}/{{postgresql.name}}/{{postgresql.pgdata}}",
      "mode": "RW"
    }
  ],
  "labels": {
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "HAPROXY_0_VHOST": "{{postgresql.virtual_host}}",
    "HAPROXY_GROUP": "external",
    "DCOS_PACKAGE_FRAMEWORK_NAME": "{{postgresql.name}}"
  }
}
